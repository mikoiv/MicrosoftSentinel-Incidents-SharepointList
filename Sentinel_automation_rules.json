{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Workspace": {
            "type": "String",
            "defaultValue": "Your Sentinel workspace name"
        },
        "Tenant": {
            "type": "string",
            "defaultValue": "Your Entra tenant id"
        },
        "LogicAppResourceId": {
            "type": "string",
            "defaultValue": "Full resource id of your Logic App"
        }
    },
    "resources": [
        {
            "name": "Incident Sharepoint List: New incidents]",
            "type": "Microsoft.SecurityInsights/automationRules",
            "scope": "[concat('Microsoft.OperationalInsights/workspaces/', parameters('Workspace'))]",
            "apiVersion": "2024-03-01",
            "properties": {
                "displayName": "Incident Sharepoint List: New incidents",
                "order": 3,
                "triggeringLogic": {
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": []
                },
                "actions": [
                    {
                        "order": 1,
                        "actionType": "RunPlaybook",
                        "actionConfiguration": {
                            "logicAppResourceId": "[Parameters('LogicAppResourceId')]",
                            "tenantId": "[Parameters('Tenant')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "Incident Sharepoint List: Updates",
            "type": "Microsoft.SecurityInsights/automationRules",
            "scope": "[concat('Microsoft.OperationalInsights/workspaces/', parameters('Workspace'))]",
            "apiVersion": "2024-03-01",
            "properties": {
                "displayName": "Incident Sharepoint List: Updates",
                "order": 4,
                "triggeringLogic": {
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Updated",
                    "conditions": [
                        {
                            "conditionType": "Boolean",
                            "conditionProperties": {
                                "operator": "Or",
                                "innerConditions": [
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentStatus",
                                            "operator": null,
                                            "changeType": null
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentOwner",
                                            "operator": null,
                                            "changeType": null
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentSeverity",
                                            "operator": "Equals",
                                            "changeType": "ChangedFrom",
                                            "propertyValues": [
                                                "Informational"
                                            ]
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentSeverity",
                                            "operator": "Equals",
                                            "changeType": "ChangedFrom",
                                            "propertyValues": [
                                                "Low"
                                            ]
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentSeverity",
                                            "operator": "Equals",
                                            "changeType": "ChangedFrom",
                                            "propertyValues": [
                                                "Medium"
                                            ]
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyChanged",
                                        "conditionProperties": {
                                            "propertyName": "IncidentSeverity",
                                            "operator": "Equals",
                                            "changeType": "ChangedFrom",
                                            "propertyValues": [
                                                "High"
                                            ]
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyArrayChanged",
                                        "conditionProperties": {
                                            "arrayType": "Comments",
                                            "changeType": "Added"
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyArrayChanged",
                                        "conditionProperties": {
                                            "arrayType": "Labels",
                                            "changeType": "Added"
                                        }
                                    },
                                    {
                                        "conditionType": "PropertyArrayChanged",
                                        "conditionProperties": {
                                            "arrayType": "Alerts",
                                            "changeType": "Added"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                },
                "actions": [
                    {
                        "order": 1,
                        "actionType": "RunPlaybook",
                        "actionConfiguration": {
                            "logicAppResourceId": "[Parameters('LogicAppResourceId')]",
                            "tenantId": "[Parameters('Tenant')]"
                        }
                    }
                ]
            }
        }
    ]
}
